<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
  <coverage processUncoveredFiles="true">
    <include>
      <directory suffix=".php">src</directory>
    </include>
    <exclude>
      <directory suffix=".php">tests</directory>
    </exclude>
  </coverage>
  <testsuites>
    <testsuite name="Object_Freezer">
      <file>tests/DATASOURCE_Test.php</file>
      <file>tests/FILTER_Test.php</file>
      <file>tests/CORRECTOR_Test.php</file>
      <file>tests/VALIDATOR_Test.php</file>
      <file>tests/TYPECAST_Test.php</file>
      <file>tests/CLOSER_Test.php</file>
      <file>tests/CHOICE_Test.php</file>
      <file>tests/RANGE_Test.php</file>
      <file>tests/REQUIREMENT_Test.php</file>
      <file>tests/TRIM_Test.php</file>
      <file>tests/VALUE_Test.php</file>
    </testsuite>
  </testsuites>
</phpunit>
